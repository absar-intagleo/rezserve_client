<h3>Sign in</h3>
<%= form_tag user_session_path, { class: 'form-horizontal'} do  %>
	<div class="form-group">
		<%= label_tag 'Email' %>
		<%= email_field_tag 'email', '', required: true, class: 'form-control' %>		
	</div>
	<div class="form-group">
		<%= label_tag 'Password' %>
		<%= password_field_tag 'password', '', required: true, class: 'form-control' %>		
	</div>
	<div class="form-group">
		<%= submit_tag 'Create', class: 'btn btn-primary' %>		
	</div>
<% end %>
<div>
  <div class="modal-dialog login-modal" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mt-1">Register your Account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
<!--         <button type="button" class="close" data-dismiss="modal" data-target="#modal_container" aria-label="Close">
          <a href="#" class="close" data-dismiss="modal" aria-label="close">&times;</a>
          <span aria-hidden="true">&times;</span>
        </button> -->
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
              <div class="text-center">
                  <p>with your social network</p>
                    <div class="social-icons mb-2">
                      <%= link_to facebook_login_users_path, remote: true, class: 'facebook-icon' do %>
                        <i class="fa fa-facebook-f"></i>
                      <% end %>
                      <%= link_to google_login_users_path, remote: true, class: 'goole-icon' do %>
                        <i class="fa fa-google-plus"></i>
                      <% end %>
                      <%= link_to linkedin_login_users_path, remote: true, class: 'linkedin-icon' do %>
                        <i class="fa fa-linkedin"></i>
                      <% end %>
                    </div>
                    <div class="or text-center">
                      <span>or</span>
                    </div>
                    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: 'form-horizontal', remote: true) do  |f| %>
                      <div id="modal_error_container">
                        <%= render partial: 'shared/messages' %>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <%= f.text_field :first_name, required: true, class: 'form-control', placeholder: 'First Name' %>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <%= f.text_field :last_name, required: true, class: 'form-control', placeholder: 'Last Name' %>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <%= f.email_field :email, required: true, class: 'form-control', placeholder: 'Email' %>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <%= f.password_field :password, required: true, class: 'form-control', placeholder: 'Password' %>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <%= f.password_field :password_confirmation, required: true, class: 'form-control', placeholder: 'Password Confirmation' %>    
                          </div>
                        </div>
                      </div>
                   
                      <div class="row">
                        <div class="col-md-12 logn-button">
                          <%= f.submit 'Create', class: 'btn btn-style' %>
                        </div>
                      </div>
                    <% end %>
                    <div class="row mt-3 mb-2">
                      <div class="col-md-12">
                          <div class="text-center">
                              <p>Already a member? <%= link_to 'Login', new_user_session_path, class: 'text-color', remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal_container' %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

